<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wekaui.scenes.ChooseUnclassifiedTextsController">
   <children>
      <VBox minHeight="-Infinity" minWidth="-Infinity" stylesheets="@stylesheets/main.css">
         <children>
            <Label id="labelTitle" maxWidth="1.7976931348623157E308" text="Unklassifizierten Daten wählen" />
            <VBox>
               <children>
                  <Label fx:id="labelTexts" maxWidth="1.7976931348623157E308" styleClass="subheader" text="Model-Informationen">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="-10.0" />
               </VBox.margin>
            </VBox>
            <VBox fx:id="dropzoneArea">
               <children>
                  <Label id="labelOpenData" fx:id="labelOpenData" maxWidth="1.7976931348623157E308" styleClass="subheader" text="Unklassifizierte Daten öffnen">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <StackPane>
                     <children>
                        <ListView fx:id="dropzoneListView" prefHeight="119.0" prefWidth="542.0" />
                        <Label id="dropzoneData" fx:id="dropzoneLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="144.0" prefWidth="542.0" styleClass="light-border" text="Datei(en) hier reinziehen oder klicken zum Öffnen" textAlignment="CENTER">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </Label>
                     </children>
                  </StackPane>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </VBox>
            <Button fx:id="prevButton" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#onPrevClicked" text="zurück" />
            <Button fx:id="nextButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#onNextClicked" text="weiter" />
         </children>
      </VBox>
   </children>
</StackPane>
