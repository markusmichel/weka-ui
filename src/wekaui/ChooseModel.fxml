<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wekaui.ChooseModelController">
   <children>
      
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="369.0" prefWidth="547.0" stylesheets="@stylesheets/main.css">
         <children>
              
            <!-- Header -->
            <Label id="labelTitle" fx:id="labelTitle" maxWidth="1.7976931348623157E308" text="Trainingsmodell wählen " textFill="#444444" />
      
            <!-- last opened model list -->
            <VBox>
                <children>
                  <Label id="labelLastUsed" fx:id="labelLastUsed" maxWidth="1.7976931348623157E308" style="-fx-background-color: #C65D8B; -fx-background-radius: 5 5 0 0;" text="zuletzt verwendet">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <wekaui.customcontrols.LastOpenedModelButton />
               </children>
               
                           <VBox.margin>
                  <Insets left="10.0" right="10.0" top="-10.0" />
               </VBox.margin>
            </VBox>
            
            <!-- Open model -->
            <VBox>
               <children>
                  <Label id="labelOpenModel" fx:id="labelOpenModel" maxWidth="1.7976931348623157E308" style="-fx-background-color: #C65D8B; -fx-background-radius: 5 5 0 0;" text="Model öffnen">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <Label id="dropzoneModel" fx:id="dropzoneModel" alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="144.0" prefWidth="542.0" styleClass="light-border" text="Datenmodell hier reinziehen oder klicken zum öffnen" textAlignment="CENTER">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </VBox>            
                        
         </children>
      </VBox>
      
      <!-- Button for goint to next step. Only visible when the user has choosen a trining model. Hidden at start -->
      <Button fx:id="nextButton" alignment="CENTER_RIGHT" disable="true" mnemonicParsing="false" text="Button" visible="false" StackPane.alignment="CENTER_RIGHT">
         <StackPane.margin>
            <Insets right="10.0" />
         </StackPane.margin>
      </Button>
      
   </children>
</StackPane>
